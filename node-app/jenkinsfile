pipeline {
    agent {
        docker { image 'node:lts-slim' }
    }
    stages {
        stage('Build') {
            steps {
                sh '''
                   echo "changing to node-app directory and listing contents"
                   cd node-app
                   pwd && ls
                   npm install
                '''
            }
        }
        stage('Running the app') {
            steps {
                sh 'node server.js'
            }
        }
    }
}
