pipeline {
    agent {
        docker { image 'node:lts-slim' }
    }
    stages {
        stage('Build') {
            steps {
                sh 'echo "change directory"'
               sh 'cd node-app'
               sh 'echo "checking current directory & its contents"'
                sh 'pwd && ls'
                sh 'npm install'
            }
        }
        stage('Running the app') {
            steps {
                sh 'node server.js'
            }
        }
    }
}
