pipeline{
    agent any 

    stages{
        stage('clone the repo'){
            steps{
                 git url: 'https://github.com/aljozy/assignment-problem.git'
            }
        }
        stage('build'){
            steps{
                sh '''
                cd node-app
                pwd
                docker buildx build . -t prev:v1
                '''
            }
        }
        stage('deploy'){
            steps{
                sh 'docker run -d --rm -p 3000:3000 preview:v1'
            }
        }


    }
}